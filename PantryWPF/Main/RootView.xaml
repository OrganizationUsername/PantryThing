<Window x:Class="Pantry.WPF.Main.RootView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:main="clr-namespace:Pantry.WPF.Main"
        xmlns:s="https://github.com/canton7/Stylet"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <DockPanel LastChildFill="True">
        <GroupBox Header="MainWindow Nav">
            <StackPanel>
                <Button Content="Recipe Management" Command="{Binding RecipeNavigationCommand}" />
                <Button Content="Inventory" Command="{Binding InventoryNavigationCommand}" />
                <Button Content="Equipment Management" Command="{Binding EquipmentNavigationCommand}" />
                <Button Content="Food Management" Command="{Binding FoodNavigationCommand}" />
                <Button Content="Item Management" Command="{Binding ItemNavigationCommand}" />
                <Label Content=""/>
                <Button Content="Seed" Command="{Binding SeedDatabaseCommand}"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="{Binding VmName}">
            <ScrollViewer HorizontalScrollBarVisibility="Auto">
                <ContentControl s:View.Model="{Binding ActiveItem}" DockPanel.Dock="Left"/>
            </ScrollViewer>
        </GroupBox>
    </DockPanel>
</Window>
