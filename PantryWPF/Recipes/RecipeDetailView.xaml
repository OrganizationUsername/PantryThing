<UserControl x:Class="PantryWPF.Recipes.RecipeDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PantryWPF.Recipes"
             xmlns:models="clr-namespace:Pantry.Core.Models;assembly=Pantry.Core"
             d:DataContext="{d:DesignInstance Type=local:RecipeDetailViewModel}"
             mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type models:RecipeStep}">
            <local:RecipeInstructionView/>
        </DataTemplate>
    </UserControl.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Auto">
        <StackPanel>
            <TextBlock Text="{Binding MainOutput.Name}"/>
            <GroupBox Header="RecipeFoods: ">
                <ListView ItemsSource="{Binding RecipeFoods}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Food.FoodName}"/>
                                <TextBox Text="{Binding Amount}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </GroupBox>
            <GroupBox Header="Instructions:">
                <ListView ItemsSource="{Binding RecipeSteps}"/>
            </GroupBox>
            <Button Content="Simulate Save" Command="{Binding FakeSaveCommand}"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
